{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build",
    "target": "ES5",
    "module": "ES5",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "components/*": ["src/components/*"],
      "types": ["src/types"],
      "utilities": ["src/utilities"]
    }
  },
  "include": ["./config/typescript/**/*"]
}
