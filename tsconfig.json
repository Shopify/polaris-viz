{
  "extends": "@shopify/typescript-configs/library.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": ".",
    "outDir": "./build/ts",
    "emitDeclarationOnly": true,
    "strict": true,
    "importHelpers": false,
    "noEmit": true,
    "incremental": true,
    "importsNotUsedAsValues": "error",
    "strictFunctionTypes": false
  },
  "include": ["./src", "./tests"]
}
