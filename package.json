{
  "name": "@shopify/polaris-viz",
  "description": "Shopifyâ€™s viz component library",
  "version": "0.0.11",
  "private": false,
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "Shopify <dev@shopify.com>",
  "publishConfig": {
    "access": "public"
  },
  "source": "src/index.ts",
  "main": "build/index.js",
  "module": "build/index.module.js",
  "unpkg": "build/index.umd.js",
  "esnext": "esnext/",
  "scripts": {
    "lint": "sewing-kit lint",
    "format": "sewing-kit format",
    "type-check": "sewing-kit type-check",
    "test": "sewing-kit test",
    "test:coverage": "CI=true yarn test --coverage",
    "posttest:coverage": "yarn open:coverage",
    "open:coverage": "open build/coverage/index.html",
    "test:ci": "yarn test --coverage",
    "check": "npm-run-all lint type-check test",
    "check:ci": "npm-run-all lint type-check test:ci",
    "clean": "rimraf build esnext types \"build-intermediate\" \"index.*\"",
    "clean:build": "rimraf \"build/!(cache|coverage)\" esnext types \"build-intermediate\" \"index.*\"",
    "optimize": "sewing-kit optimize",
    "_prebuild": "npm-run-all clean:build optimize",
    "build": "microbundle --jsx React.createElement",
    "prebuild-consumer": "yarn run build",
    "build-consumer": "node ./scripts/build-consumer",
    "prepublish": "in-publish && yarn run build || :",
    "dev": "sewing-kit playground"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-shopify/prettier"
    ],
    "rules": {
      "selector-class-pattern": "^[a-zA-Z][a-zA-Z0-9-]+$",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "last 3 chrome versions",
    "last 3 chromeandroid versions",
    "last 3 firefox versions",
    "last 3 opera versions",
    "last 2 edge versions",
    "safari >= 10",
    "ios >= 9"
  ],
  "devDependencies": {
    "@shopify/react-testing": "^1.8.0",
    "@shopify/tophat": "^0.0.4",
    "@shopify/typescript-configs": "^2.0.2",
    "@types/d3-array": "^2.0.0",
    "@types/d3-scale": "^2.1.1",
    "@types/d3-shape": "^1.3.2",
    "@types/jest": "24.0.19",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.8.4",
    "cssnano": "^4.1.10",
    "csstype": "^2.6.8",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.4",
    "in-publish": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.13.1",
    "microbundle": "^0.12.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.0",
    "sass": "^1.26.10",
    "typescript": "~3.7.2"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "files": [
    "esnext",
    "index.esnext",
    "styles",
    "types",
    "locales",
    "index.js",
    "index.es.js",
    "styles.css",
    "styles.min.css"
  ],
  "dependencies": {
    "@shopify/css-utilities": "^1.0.0",
    "@shopify/polaris-tokens": "^2.6.0",
    "d3-array": "^2.4.0",
    "d3-scale": "^1.0.7",
    "d3-shape": "^1.3.7",
    "react-spring": "^8.0.27",
    "use-debounce": "^3.3.0"
  }
}
