{
  "name": "@shopify/polaris-viz",
  "description": "Shopifyâ€™s viz component library",
  "version": "0.21.1",
  "private": false,
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "Shopify <dev@shopify.com>",
  "publishConfig": {
    "access": "public"
  },
  "main": "index",
  "types": "types/index.d.ts",
  "scripts": {
    "size": "yarn run build && size-limit",
    "lint": "sewing-kit lint",
    "format": "sewing-kit format",
    "type-check": "sewing-kit type-check",
    "test": "sewing-kit test",
    "test:coverage": "CI=true yarn test --coverage",
    "test:debug:chrome": "osascript -e 'tell app \"Google Chrome\" to open location \"chrome://inspect\"' && sewing-kit-debug test --debug",
    "posttest:coverage": "yarn open:coverage",
    "open:coverage": "open build/coverage/index.html",
    "test:ci": "yarn test --coverage",
    "check": "npm-run-all lint type-check test",
    "check:ci": "npm-run-all lint type-check test:ci",
    "clean": "rimraf build esnext types \"build-intermediate\" \"index.*\"",
    "clean:build": "rimraf \"build/!(cache|coverage)\" esnext types \"build-intermediate\" \"index.*\"",
    "optimize": "sewing-kit optimize",
    "prebuild": "npm-run-all clean:build optimize",
    "build": "node ./scripts/build.js",
    "prebuild-consumer": "yarn run build",
    "build-consumer": "node ./scripts/build-consumer",
    "prepublish": "in-publish && yarn run build || :",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs-build",
    "add:story": "node ./.storybook/cli.js"
  },
  "size-limit": [
    {
      "name": "cjs",
      "path": "build/polaris-viz.js"
    },
    {
      "name": "esm",
      "path": "build/polaris-viz.es.js"
    },
    {
      "name": "css",
      "path": "build/polaris-viz.css"
    }
  ],
  "stylelint": {
    "extends": [
      "@shopify/stylelint-plugin/prettier"
    ],
    "rules": {
      "selector-class-pattern": "^[a-zA-Z][a-zA-Z0-9-]+$",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "last 3 chrome versions",
    "last 3 chromeandroid versions",
    "last 3 firefox versions",
    "last 3 opera versions",
    "last 2 edge versions",
    "safari >= 10",
    "ios >= 9"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@juggle/resize-observer": "^3.3.1",
    "@shopify/babel-preset": "^24.0.1",
    "@shopify/postcss-plugin": "^3.1.1",
    "@shopify/react-testing": "^3.0.1",
    "@shopify/sewing-kit": "^2.1.2",
    "@size-limit/preset-big-lib": "^5.0.1",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@storybook/theming": "^6.3.7",
    "@types/d3-array": "^2.12.1",
    "@types/d3-color": "1",
    "@types/d3-scale": "^2.1.1",
    "@types/d3-shape": "^1.3.2",
    "@types/jest": "26.0.23",
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^12.7.5",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.8.4",
    "babel-loader": "^8.2.2",
    "change-case": "^3.1.0",
    "copyfiles": "^2.1.1",
    "cssnano": "^4.1.10",
    "csstype": "^2.6.8",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.4",
    "in-publish": "^2.0.0",
    "ink": "^2.3.0",
    "js-yaml": "^3.13.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.18",
    "postcss-loader": "^3",
    "postcss-modules-extract-imports": "^2.0.0",
    "postcss-modules-local-by-default": "^2.0.6",
    "postcss-modules-parser": "^1.1.1",
    "postcss-modules-scope": "^2.1.0",
    "postcss-modules-values": "^2.0.0",
    "postcss-shopify": "^2.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.0",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-pluginutils": "^2.8.2",
    "sass-loader": "^10.1.1",
    "semver": "^6.3.0",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "size-limit": "^5.0.1",
    "typescript": "~4.3.2"
  },
  "peerDependencies": {
    "@juggle/resize-observer": "^3.3.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "files": [
    "esnext",
    "index.esnext",
    "styles",
    "types",
    "locales",
    "index.js",
    "index.es.js",
    "styles.css",
    "styles.min.css",
    "!*.stories.*"
  ],
  "dependencies": {
    "@react-spring/web": "^9.1.2",
    "d3-array": "2.4.0",
    "d3-color": "1",
    "d3-path": "1",
    "d3-scale": "^1.0.7",
    "d3-shape": "^1.3.7",
    "fast-deep-equal": "^3.1.3",
    "lodash.throttle": "^4.1.1",
    "use-debounce": "^3.3.0",
    "vega-lite": "^5.1.1"
  },
  "resolutions": {
    "browserslist": "^4.16.7",
    "d3-array": "2.4.0",
    "glob-parent": "^6.0.1",
    "trim": "^1.0.1",
    "trim-newlines": "^3.0.1"
  }
}
